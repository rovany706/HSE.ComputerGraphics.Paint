<Window x:Class="HSE.ComputerGraphics.Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HSE.ComputerGraphics.Paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Canvas DockPanel.Dock="Left" x:Name="MainCanvas" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="446" MouseDown="MainCanvas_MouseDown" MouseMove="MainCanvas_MouseMove" MouseUp="MainCanvas_MouseUp" Background="White"/>
            <Button DockPanel.Dock="Right" x:Name="btnAddLine" Content="Add line" HorizontalAlignment="Left" Margin="461,38,0,0" VerticalAlignment="Top" Width="75" Click="btnAddLine_Click"/>
            <Button DockPanel.Dock="Right" x:Name="btnRemoveLine" Content="Remove line" HorizontalAlignment="Left" Margin="461,75,0,0" VerticalAlignment="Top" Width="75"/>

            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock x:Name="lbCursorPosition" />
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
